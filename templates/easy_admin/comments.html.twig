<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Author</th>
            <th>Content</th>
        </tr>
    </thead>
    {% for comment in value %}
        <tr>
            <td>{{ comment.id }}</td>
            <td>{{ comment.author.firstName }}</td>
            <td>{{ comment.message }}</td>
        </tr>
    {% endfor %}
</table>
